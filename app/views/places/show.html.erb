<h1 class="mb-3"><%= @place["name"] %></h1>

<h2 class="mb-4">My Entries</h2>
<div class="row g-3 mb-4">
  <% for entry in @entries %>
    <div class="col-12 col-md-4 g-3">
      <h3 class="mb-2"><%= entry["title"] %></h3>
      <p>Occurred on: <%= entry["occurred_on"] %></p>
      <% if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid mb-2" alt="Uploaded image">
      <% else %>
        <p class="text-muted">No image uploaded</p>
      <% end %>
      <p><%= entry["description"] %></p>
    </div>
  <% end %>
</div>

<p class="mt-4 mb-2">
  <a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>" role="button">New Entry</a>
</p>

<p>
  <a class="btn btn-primary" href="/places" role="button">Back to All Places</a>
</p>